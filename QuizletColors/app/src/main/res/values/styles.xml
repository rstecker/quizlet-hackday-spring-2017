<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="LobbyButtons">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@color/text_color_inverted</item>
        <item name="android:background">@color/button_colors</item>
        <item name="android:minHeight">@dimen/min_tap_target_size</item>
    </style>

    <style name="GameOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:padding">@dimen/list_item_padding</item>
        <item name="android:minHeight">@dimen/min_tap_target_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="DebugText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@color/background_color_high_contrast</item>
    </style>
</resources>
