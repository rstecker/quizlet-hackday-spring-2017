<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/big_window"
    android:background="@color/wrong_question_overlay"
    android:orientation="vertical"
    android:padding="50dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/wrong_question_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/wrong_question_background"
        android:gravity="center"
        tools:text="This is where the answer details go" />
</FrameLayout>