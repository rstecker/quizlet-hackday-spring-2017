<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/board_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no game info yet" />

        <TextView
            android:id="@+id/board_option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LobbyButtons"
            android:text="Possible Answer" />

        <TextView
            android:id="@+id/board_option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LobbyButtons"
            android:text="Possible Answer" />

        <TextView
            android:id="@+id/board_option_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LobbyButtons"
            android:text="Possible Answer" />

        <TextView
            android:id="@+id/board_option_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LobbyButtons"
            android:text="Possible Answer" />


        <TextView
            android:id="@+id/lobby_users_text_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="no users here yet" />

    </LinearLayout>

</ScrollView>