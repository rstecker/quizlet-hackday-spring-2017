<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/set_name"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Set name" />

                <TextView
                    android:id="@+id/set_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="desc" />

                <TextView
                    android:id="@+id/creator_name"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="creator name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/term_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="50 terms" />

                <TextView
                    android:id="@+id/summary_synced_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Un-synced" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/summary_sync_button"
                        android:layout_width="@dimen/min_tap_target_size"
                        android:layout_height="@dimen/min_tap_target_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sync" />

                    <ImageView
                        android:id="@+id/summary_start_game_button"
                        android:layout_width="@dimen/min_tap_target_size"
                        android:layout_height="@dimen/min_tap_target_size"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        tools:visibility="visible"
                        android:src="@drawable/ic_play_arrow_black" />
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>