<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/board_a_1"
            style="@style/Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Montgomery" />

        <TextView
            android:id="@+id/board_a_2"
            style="@style/Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juneau" />

        <TextView
            android:id="@+id/board_q"
            style="@style/Question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Michigan" />

        <TextView
            android:id="@+id/board_a_3"
            style="@style/Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Springfield" />

        <TextView
            android:id="@+id/board_a_4"
            style="@style/Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dover" />
    </LinearLayout>

    <studioes.arm.six.partskit.CompasRose
        android:id="@+id/rose_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clipChildren="false"
        android:translationX="-100dp"
        android:translationY="100dp"
        app:lineColor="?playerBlue"
        app:lineType="@drawable/line_dimond" />

    <studioes.arm.six.partskit.CompasRose
        android:id="@+id/rose_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clipChildren="false"
        android:translationX="100dp"
        android:translationY="100dp"
        app:lineColor="?playerBlue"
        app:lineType="@drawable/line_dimond" />

    <studioes.arm.six.partskit.CompasRose
        android:id="@+id/rose_3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:clipChildren="false"
        android:translationX="100dp"
        android:translationY="-100dp"
        app:lineColor="?playerBlue"
        app:lineType="@drawable/line_dimond" />

    <studioes.arm.six.partskit.CompasRose
        android:id="@+id/rose_4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clipChildren="false"
        android:translationX="-100dp"
        android:translationY="-100dp"
        app:lineColor="?playerBlue"
        app:lineType="@drawable/line_dimond" />
</RelativeLayout>